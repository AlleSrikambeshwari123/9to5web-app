<% layout('./shared/__template')%>
<form id="updateProfileForm" method="POST" action='create'>
  <div class="row gutters">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title"><%= title%></h4>
        </div>
        <div id="myLoader"><img src="/img/preloader.gif"></div>
        <div class="card-body">
          
          <div class="form-group form-show-validation row">
            <label for="firstName" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">First Name
              <span class="required-label">*</span></label>
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input type="text" class="form-control" value="<%-profile.firstName%>" id="firstName" name="firstName" placeholder="First Name" required>
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="lastName" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Last Name
              <span class="required-label">*</span></label>
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input type="text" class="form-control" value="<%-profile.lastName%>" id="lastName" name="lastName" placeholder="Last Name" required>
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="email" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Email</label>
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input type="text" class="form-control" value="<%-profile.email%>" readonly id="email" name="email" placeholder="Email Address">
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="mobile" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Mobile</label>
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input type="number" class="form-control" value="<%-profile.telephone%>" id="mobile" name="telephone" placeholder="(xxx)-xxx-xxxx">
            </div>
          </div>
         
         
        </div>
        <div class="card-action">
          <button type="submit" class="btn btn-primary">Save</button>
          
        </div>
      </div>
    </div>
  </div>
</form>

<% block('scripts').append('<script src="/js/utils.js"></script>')%>
<% block('scripts').append('<script src="/js/customer/update_profile.js"></script>')%>