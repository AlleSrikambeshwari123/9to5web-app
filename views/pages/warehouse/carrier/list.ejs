<% layout('./shared/__template')%>
<div class='gutters'>
  <div class="col-xl-12 col-lg-6 col-md-12 col-sm-12">
    <div class="card">
      <div class="card-header d-flex align-items-left align-items-md-center flex-column flex-md-row">
        <div class="card-title"><%=title%></div>
        <a href='create' class='btn btn-primary btn-round float-right ml-md-auto'>Add New Carrier</a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table id="carrierTable" class="display table table-striped table-hover">
            <thead>
              <tr>
                <!-- <th>ID</th> -->
                <th>Name</th>
                <th>Contact Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <!-- <th>Fax</th> -->
                <th>Address</th>
                <!-- <th>State</th> -->
                <!-- <th>Country</th> -->
                <!-- <th>ZipCode</th> -->
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% carriers.forEach(function(carrier){%>
              <tr data-record="<%= carrier.id %>">
                <!-- <td><%=carrier.id%></td> -->
                <td><strong><%=carrier.name%></strong></td>
                <td><%=helpers.getFullName(carrier)%></td>
                <td><%=carrier.email%></td>
                <td><%=carrier.telephone %></td>
                <!-- <td><%=carrier.fax %></td> -->
                <td><%=carrier.address %></td>
                <!-- <td><%=carrier.state %></td> -->
                <!-- <td><%=carrier.country %></td> -->
                <!-- <td><%=carrier.zipcode %></td> -->
                <td>
                  <a href='manage/<%=carrier.id%>/get'><i class="fas fa-pen"></i></a>
                  <!-- temporary commenting the code -->
                  <!-- <a href='#' class='rm-carrier ml-3' data-id='<%=carrier.id%>'><i class="fas fa-trash"></i></a> -->
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<% block('scripts').append('<script src="/js/utils.js"></script>')%>
<% block('scripts').append('<script src="/js/warehouse/carrier/list.js"></script>')%>