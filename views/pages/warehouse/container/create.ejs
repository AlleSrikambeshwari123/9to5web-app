<% layout('./shared/__template')%>
<form id="add-container-form" method="POST" action="create">
  <div class="row gutters">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title"><%=title%></h4>
        </div>
        <div id="myLoader"><img src="../../../img/preloader.gif"></div>
        <div class="card-body">
          <div class="form-group form-show-validation row">
            <label for="name" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"
              >Container Name <span class="required-label">*</span></label
            >
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Name"
                required
              />
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="container-number" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"
              >Number</label
            >
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input type="number" min="0" class="form-control" id="container-number" name="number" />
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="container-size" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"
              >Size</label
            >
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input type="number" min="0" class="form-control" id="container-size" name="size" />
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="container-weight" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"
              >Weight</label
            >
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input
              min="0"
                type="number"
                class="form-control"
                id="container-weight"
                name="weight"
                step="0.001"
              />
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="container-date" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"
              >Date</label
            >
            <div class="col-lg-4 col-md-9 col-sm-8 d-flex">
              <input type="text" class="form-control" id="container-date" name="date" />
              <div class="input-group-append">
                <span class="input-group-text">
                  <i class="fa fa-calendar-check"></i>
                </span>
              </div>
            </div>
          </div>
          <div class="form-group form-show-validation row">
            <label for="container-seal" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"
              >Seal</label
            >
            <div class="col-lg-4 col-md-9 col-sm-8">
              <input type="text" class="form-control" id="container-seal" name="seal" />
            </div>
          </div>
        </div>
        <div class="card-action">
          <button type="submit" class="btn btn-primary">Create</button>
          <button type="button" id="cancelForm" class="btn btn-danger">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</form>

<% block('scripts').append('<script src="/js/utils.js"></script>')%>
<% block('scripts').append('<script src="/js/warehouse/container/create.js"></script>')%>
