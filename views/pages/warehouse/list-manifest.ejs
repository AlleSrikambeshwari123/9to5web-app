<% layout('./shared/__template')%>
<div class='gutters'>
  <div class='col-xl-12 col-lg-6 col-md-12 col-sm-12'>


      <div class='card'>
            <div class="card-header col-md-12">
                    <div class='row'> 
                        <div class='col-md-6'><button class='btn btn-primary btn-lg col-md-12 create-manifest ' data-type='1' >Cargo 1</button></div>
                        <div class='col-md-6'><button class='btn btn-primary btn-lg col-md-12 create-manifest' data-type='1'>Cargo 2</button></div>
                         </div>
            </div>
            <div class="card-body">
                    <%if (listing.length > 0) {%>
               <table class="table m-0 mlisting">
                    <tr>
                        <th>Manifest #</th>
                        <th>Manifest Status</th>
                        <th>Date Created </th>
                        <th>Created By</th>
                        <th></th>
                    </tr>

                   <tbody id='data-listing'>
                    <% listing.forEach(function(manifest){ %>
                    <tr>
                        <td><strong>M-<%=manifest.ManifestId%></strong></td>
                        <td><%=manifest.StageName%></td>
                        <td><%=manifest.DateCreatedDisplay %></td>
                        <td><%=manifest.CreatedBy%></td>
                        <td><a href='/warehouse/m-packages/<%=manifest.ManifestId%>' class='btn btn-sm btn-primary'>Manage</a> <button class='btn btn-danger btn-sm'>Delete</button></td>
                    </tr>

                    <%});%>
                </tbody>
               </table>
               <%}else {%>
                <table class="table m-0 mlisting" style="display:none;">
                        <tr>
                            <th>Manifest #</th>
                            <th>Manifest Status</th>
                            <th>Date Created </th>
                            <th>Created By</th>
                        </tr>
                </table>
                <div class="alert alert-warning">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                        <i class="icon-flash"></i><strong>Heads up!</strong> you haven't used the system yet....Go ahead and click Cargo 1 or 2 to create your first manifest!
                    </div>
                
               <%}%>
            </div>

      </div>
  </div>
</div>
<% block('scripts').append('<script src="/js/manifest.js"></script>')%>
