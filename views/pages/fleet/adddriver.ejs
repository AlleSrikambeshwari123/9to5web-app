<% layout('./shared/__template')%>
<div class="card">
	<div class="card-header">
		<div class="card-title">Add Driver</div>
		<div class="card-category">Add driver description here</div>
	</div>
	<form id="addDriverForm">
		<div class="card-body">
			<div class="form-group form-show-validation row">
				<label for="vehicle_make" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">First Name <span
						class="required-label">*</span></label>
				<div class="col-lg-4 col-md-9 col-sm-8">
					<input type="text" class="form-control" id="vehicle_make" name="name" placeholder="Enter First Name"
						required>
				</div>
			</div>
			<div class="form-group form-show-validation row">
				<label for="vehicle_make" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Second Name <span
						class="required-label">*</span></label>
				<div class="col-lg-4 col-md-9 col-sm-8">
					<input type="text" class="form-control" id="vehicle_make" name="name"
						placeholder="Enter Second Name" required>
				</div>
			</div>
			<div class="form-group form-show-validation row">
				<label for="mobile" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Mobile <span
						class="required-label">*</span></label>
				<div class="col-lg-4 col-md-9 col-sm-8">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text" id="username-addon">@</span>
						</div>
						<input type="text" class="form-control" placeholder="Mobile Number" aria-label="mobile"
							aria-describedby="username-addon" id="mobile" name="mobile" required>
					</div>
				</div>
			</div>
			<div class="form-group form-show-validation row">
				<label for="email" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Email Address <span
						class="required-label">*</span></label>
				<div class="col-lg-4 col-md-9 col-sm-8">
					<input type="email" class="form-control" id="email" placeholder="Enter Email" required>
					<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
						else.</small>
				</div>
			</div>
			<div class="separator-solid"></div>
			<div class="form-group form-show-validation row">
				<label class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Upload License <span
						class="required-label">*</span></label>
				<div class="col-lg-4 col-md-9 col-sm-8">
					<div class="input-file input-file-image">
						<img class="img-upload-preview" width="100" height="100" src="https://placehold.it/100x100"
							alt="preview">
						<input type="file" class="form-control form-control-file" id="uploadImg" name="uploadImg"
							accept="image/*" required>
						<label for="uploadImg" class="btn btn-primary btn-round btn-lg"><i class="fa fa-file-image"></i>
							Upload a License</label>
					</div>
				</div>
			</div>
		</div>
		<div class="card-action">
			<div class="row">
				<div class="col-md-12">
					<input class="btn btn-success" type="submit" value="Validate">
					<button class="btn btn-danger" id="cancel">Cancel</button>
				</div>
			</div>
		</div>
	</form>
</div>

<% block('scripts').append('<script src="/js/fleet/adddriver.js"></script>')%>