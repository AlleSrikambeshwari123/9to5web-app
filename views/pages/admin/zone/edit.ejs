<% layout('./shared/__template')%>
<div class="card">
  <div class="card-header">
    <div class="card-title"><%= title %></div>
  </div>
  <form id="add-zone-form" method='POST' action='update'>
    <div class="card-body">
      <div class="form-group form-show-validation row">
        <input type="hidden" id="id" name="id" required value="<%=zone.id%>">
        <label for="name" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Location Name
          <span class="required-label">*</span></label>
        <div class="col-lg-4 col-md-9 col-sm-8">
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter Title" required
            value="<%=zone.name%>">
        </div>
      </div>
      <div class="form-group form-show-validation row">
        <label for="location" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Location
          <span class="required-label">*</span></label>
        <div class="col-lg-4 col-md-9 col-sm-8">
          <select id="location" name="location" class=" form-control " required>
            <% locations.forEach(locationData => { %>
              <option value="<%= locationData._id%>" <% if(locationData._id.toString()==zone.location._id.toString()) { %> selected <% } %>> <%= locationData.name %>
              </option>
              <% }) %>  
          </select>
        </div>
      </div>
    </div>
    <div class="card-action">
      <div class="row">
        <div class="col-md-12">
          <input class="btn btn-primary" type="submit" value="Update">
          <button type="button" id="cancelForm" class="btn btn-danger">Cancel</button>
        </div>
      </div>
    </div>
  </form>
</div>

<% block('scripts').append('<script src="/js/admin/zone/edit.js"></script>')%>