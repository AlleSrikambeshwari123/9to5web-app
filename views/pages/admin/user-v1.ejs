<% layout('./shared/__template')%>
<form id="saveFrom" method='POST' action='/admin/user/'>
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">Save User</div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="exOne">Username</label>
                        <input type="text" class="form-control" name='username' id="username" placeholder="" required
                            value='<%=user.username %>'>
                    </div>
                    <div class="form-group">
                        <label for="exOne">First Name</label>
                        <input type="text" class="form-control" name='firstname' id="firstname" placeholder="" required
                            value='<%=user.firstName %>'>
                    </div>
                    <div class="form-group">
                        <label for="exOne">LastName</label>
                        <input type="text" class="form-control" name='lastname' id="lastname" placeholder="" required
                            value='<%=user.lastName %>'>
                    </div>
                    <div class="form-group">
                        <label for="exOne">Password</label>
                        <%
                                    var passrequired = 'required'; 
                                    if (user.username.length > 0)
                                      passrequired = ''; 
                                
                                %>
                        <input type="password" class="form-control" name='password' id="password" placeholder=""
                            <%=passrequired%>>
                    </div>
                    <div class="form-group">
                        <label for="exOne">Confirm Password</label>
                        <input type="password" class="form-control" name='cpass' id="cpass" placeholder=""
                            <%=passrequired%>>
                    </div>
                    <div class="form-group">
                        <label for="exOne">Email address</label>
                        <input type="email" class="form-control" id="email" name='email' placeholder="name@example.com"
                            value='<%=user.email %>'>
                    </div>
                    <div class="form-group">
                        <label for="exOne">Mobile</label>
                        <input type="text" class="form-control" id="mobile" name='mobile' placeholder="(xxx)-xxx-xxxx"
                            value='<%=user.mobile %>'>
                    </div>
                    <h3>User Permissions</h3>
                    <div class="form-group">
                       <label>Warehouse FL</label>
                       <div><input type='checkbox' class='form-control'></div>
                    </div>
                    <div class="form-group">
                        <label>Warehouse NAS</label>
                        <div><input type='checkbox' class='form-control'></div>
                     </div>
                     <div class="form-group">
                        <label>Warehouse Albany</label>
                        <div><input type='checkbox' class='form-control'></div>
                     </div>
                     <div class="form-group">
                        <label>Update AWB FL</label>
                        <div><input type='checkbox' class='form-control'></div>
                     </div>
                     <div class="form-group">
                        <label>Update AWB NAS</label>
                        <div><input type='checkbox' class='form-control'></div>
                     </div>
                     <div class="form-group">
                        <label>Update Users </label>
                        <div><input type='checkbox' class='form-control'></div>
                     </div>
                     <div class="form-group">
                        <label>Update Customer NAS</label>
                        <div><input type='checkbox' class='form-control'></div>
                     </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" id="cancelForm" class="btn btn-primary">Cancel</button>
                </div>
            </div>
        </div>

    </div>
</form>

<% block('scripts').append('<script src="/js/adminUsers.js"></script>')%>