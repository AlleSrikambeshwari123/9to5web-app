<% layout('./shared/__template')%>
<div class="card">
  <div class="card-header">
    <div class="card-title"><%= title %></div>
  </div>
  <form id="add-location-form" method='POST' action='update'>
    <div class="card-body">
      <div class="form-group form-show-validation row">
        <label for="companyId" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Company
          <span class="required-label">*</span></label>
        <div class="col-lg-4 col-md-9 col-sm-8">
          <select id="companyId" name="companyId" class=" form-control " required>
            <option value='9to5' <% if(location.companyId == '9to5') { %> selected <% } %>>9to5</option>
            <option value='pmb' <% if(location.companyId == 'pmb') { %> selected <% } %>>Post Boxes</option>
          </select>
        </div>
      </div>
      <div class="form-group form-show-validation row">
        <input type="hidden" id="id" name="id" required value="<%=location.id%>">
        <label for="name" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Location Name
          <span class="required-label">*</span></label>
        <div class="col-lg-4 col-md-9 col-sm-8">
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter Title" required
            value="<%=location.name%>">
        </div>
      </div>
      <div class="form-group form-show-validation row">
        <label for="phone" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Phone Number <span
            class="required-label">*</span></label>
        <div class="col-lg-4 col-md-9 col-sm-8">
          <input type="number" class="form-control" id="phone" name='phone' placeholder="Enter Office Phone" required
            value="<%=location.phone%>">
        </div>
      </div>
      <div class="form-group form-show-validation row">
        <label for="address" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">Address </label>
        <div class="col-lg-4 col-md-9 col-sm-8">
          <textarea type="text" class="form-control" id="address" name='address' rows="5"
            placeholder="Enter Office address"><%=location.address%></textarea>
        </div>
      </div>
    </div>
    <div class="card-action">
      <div class="row">
        <div class="col-md-12">
          <input class="btn btn-primary" type="submit" value="Update">
          <button class="btn btn-danger" id="cancel">Cancel</button>
        </div>
      </div>
    </div>
  </form>
</div>

<% block('scripts').append('<script src="/js/admin/location/edit.js"></script>')%>